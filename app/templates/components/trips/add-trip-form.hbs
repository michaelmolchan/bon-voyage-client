{{!-- {{#if addingTrip}} --}}
  <h2>Enter Your Trip Information:</h2>
  <form {{action 'addTrip' on="submit"}}>
    <div class="form-group">
      {{!-- <label for="email">City:</label> --}}
      <{{input type="text" placeholder="City" value=trip.city required=true}}
    </div>
    <div class="form-group">
      {{!-- <label for="pwd">State:</label> --}}
      {{input type="text" placeholder="State" value=trip.state required=true}}
    </div>
    <div class="form-group">
      {{!-- <label for="pwd">Country:</label> --}}
      {{input type="text" placeholder="Country" value=trip.country required=true}}
    </div>
    <button class='btn btn-success' type="submit">Add Trip</button>
    <button class="btn btn-danger" {{action "reset"}}>Cancel</button>
    {{!-- {{#if editForm}}
      <button {{action 'cancel'}} class='btn-xs btn-danger'>Cancel</button>
    {{/if}} --}}
  </form>
{{!-- {{else}}
